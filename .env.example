# ========================================
# DocuPilot Environment Configuration
# ========================================

# ERNIE API Configuration
# Get your API key from: https://ai.baidu.com or https://novita.ai
ERNIE_API_KEY=your_ernie_api_key_here
ERNIE_MODEL=ernie-4.5-8k
ERNIE_BASE_URL=https://aip.baidubce.com
ERNIE_ACCESS_TOKEN=

# PaddleOCR Configuration
PADDLEOCR_API_KEY=your_paddleocr_key_here
PADDLEOCR_MODEL=ppstructure
PADDLEOCR_LANG=en

# Agent Configuration
MAX_TOKENS=8000
TEMPERATURE=0.3
TOP_P=0.9
VERIFIER_STRICTNESS=high

# Output Configuration
OUTPUT_DIR=src/outputs
LOG_LEVEL=INFO
LOG_FILE=docupilot.log

# Processing Options
MAX_PAGES_PER_PDF=50
MAX_CONCURRENT_AGENTS=5
RETRY_ATTEMPTS=3

# Optional: Custom Rules
RULES_DIR=data/rules
DEFAULT_RULE_SET=contract_compliance
